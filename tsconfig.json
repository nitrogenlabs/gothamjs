{
  "compileOnSave": false,
  "compilerOptions": {
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "declaration": true,
    "emitDeclarationOnly": true,
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "lib": [
      "dom",
      "esnext"
    ],
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": false,
    "outDir": "./lib",
    "pretty": true,
    "removeComments": true,
    "rootDir": "./src",
    "skipLibCheck": true,
    "target": "es5",
    "typeRoots": [
      "node_modules/@types",
      "node_modules/json-d-ts"
    ],
    "types": [
      "jest",
      "node"
    ]
  },
  "exclude": [
    "./lib",
    "./node_modules"
  ],
  "include": [
    "./src",
    ".storybook"
  ]
}