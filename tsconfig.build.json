{
  "compileOnSave": false,
  "compilerOptions": {
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./src",
    "declaration": true,
    "emitDeclarationOnly": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "inlineSourceMap": true,
    "jsx": "react",
    "lib": [
      "dom",
      "es2015",
      "es5",
      "es6",
      "es7",
      "esnext"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noStrictGenericChecks": true,
    "noUnusedLocals": true,
    "outDir": "./lib",
    "pretty": true,
    "removeComments": true,
    "rootDir": "./src",
    "skipLibCheck": true,
    "target": "es5",
    "typeRoots": [
      "node_modules/@types",
      "node_modules/json-d-ts"
    ],
    "types": [
      "node"
    ]
  },
  "exclude": [
    "**/*.test.*",
    "./lib",
    "./node_modules"
  ],
  "include": [
    "./src"
  ]
}